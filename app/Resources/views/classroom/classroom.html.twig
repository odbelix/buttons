{% extends 'CoreBundle:Default:base_extend.html.twig' %}

{% block title %}Botonera: {{classroom.name}}{% endblock %}

{% block section_title %} {{classroom.name}} {% endblock %}
{% block section_subtitle %} {{classroom.code}} {% endblock %}
{% block section_action %}{% endblock %}

{% block section_content %}
<section class="mbr-info mbr-info-extra mbr-section mbr-section-md-padding" id="msg-box1-1a" style="background-color: rgb(255, 255, 255); padding-top: 90px; padding-bottom: 90px;">
    <div class="container">
        <div class="row">
            <div class="mbr-table-md-up">
                {% if session %}
                <div class="mbr-table-cell col-md-4">
                    <div class="text-xs-center"><a class="btn btn-success" href="{{path('active_index',{'id':session.id})}}">Ingresar</a></div>
                </div>
                <div class="mbr-table-cell mbr-right-padding-md-up col-md-8 text-xs-center">
                    <h3 class="mbr-info-title mbr-section-title display-2">Tienes una sesión activa {{ session.createdat|time_diff }}.</h3>
                </div>
                {% else %}
                <div class="mbr-table-cell col-md-4">
                    <div class="text-xs-center">
                    {{ form_start(sessionform) }}
                        <input class="btn btn-success" type="submit" value="Iniciar Sesión">
                    {{ form_end(sessionform) }}
                    </div>
                </div>
                <div class="mbr-table-cell mbr-right-padding-md-up col-md-8 text-xs-center">
                    <h2 class="mbr-info-subtitle mbr-section-subtitle">Inicia una sesión para crear actividades para tus estudiantes</h2>
                    <h3 class="mbr-info-title mbr-section-title display-2">Comienza ahora!</h3>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
<section class="mbr-section" id="pricing-table2-1b" style="background-color: rgb(255, 255, 255); padding-top: 0px; padding-bottom: 0px;">
    <div class="mbr-section mbr-section-nopadding mbr-price-table">
      <div class="row">
            <div class="col-xs-12  col-md-6 col-xl-4">
                <div class="mbr-plan card text-xs-center">
                    <div class="mbr-plan-header card-block">

                      <div class="card-title">
                        <h3 class="mbr-plan-title">Estudiantes</h3>
                        <small class="mbr-plan-subtitle">Description</small>
                      </div>
                      <div class="card-text">
                          <div class="mbr-price">
                            <small class="mbr-price-term">4</small>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12  col-md-6 col-xl-4">
                <div class="mbr-plan card text-xs-center">
                    <div class="mbr-plan-header card-block">

                      <div class="card-title">
                        <h3 class="mbr-plan-title">Sesiones</h3>
                        <small class="mbr-plan-subtitle">Description</small>
                      </div>
                      <div class="card-text">
                          <div class="mbr-price">
                            <small class="mbr-price-term">{{sessions|length}}</small>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12  col-md-6 col-xl-4">
                <div class="mbr-plan card text-xs-center">
                    <div class="mbr-plan-header card-block">

                      <div class="card-title">
                        <h3 class="mbr-plan-title">Actividades</h3>
                        <small class="mbr-plan-subtitle">Description</small>
                      </div>
                      <div class="card-text">
                          <div class="mbr-price">
                            <small class="mbr-price-term">{{activities|length}}</small>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
    </div>
</section>
{% endblock %}
