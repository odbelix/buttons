{% extends 'CoreBundle:Default:base_extend.html.twig' %}

{% block title %}Botonera: Sala{% endblock %}

{% block section_title %} {{ classroom.name }} {% endblock %}
{% block section_action %}<a class="btn btn-secondary"  href="{{ path('classroom_index') }}">Volver</a>{% endblock %}
{% block section_content %}
<section class="mbr-section" id="pricing-table2-1b" style="background-color: rgb(255, 255, 255); padding-top: 0px; padding-bottom: 0px;">
    <div class="mbr-section mbr-section-nopadding mbr-price-table">
      <div class="row">
            <div class="col-xs-12  col-md-6 col-xl-3">
            </div>
            <div class="col-xs-12  col-md-6 col-xl-6">
                <div class="table-responsive">
                {{ form_start(edit_form) }}
                  <div class="form-group">
                    <label class="mbr-price-term">{{form_label(edit_form.code)}}</label>
                    {{ form_widget(edit_form.code,{ 'attr': {'class': 'form-control'} }) }}
                  </div>
                  <div class="form-group">
                    <label class="mbr-price-term">{{form_label(edit_form.name)}}</label>
                    {{ form_widget(edit_form.name,{ 'attr': {'class': 'form-control'} }) }}
                  </div>
                    <input type="submit" class="btn btn-success form-control" value="Actualizar" />
                {{ form_end(edit_form) }}
                </div>
            </div>
            <div class="col-xs-12  col-md-6 col-xl-3">
            </div>
      </div>
    </div>
</section>
{% endblock %}
